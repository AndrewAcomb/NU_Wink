<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autoSizeTextType="uniform"
    tools:context=".Results">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="360dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:autoSizeMaxTextSize="45sp"
        android:autoSizeMinTextSize="20sp"
        android:autoText="true"
        android:fontFamily="@font/black"
        android:gravity="center"
        android:text="@string/current_landmark"
        android:textColor="#663398"
        android:textColorLink="@android:color/background_light"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewLoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:autoSizeMaxTextSize="64sp"
        android:autoSizeMinTextSize="4sp"
        android:autoText="true"
        android:fontFamily="@font/book"
        android:scrollbars="vertical"
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewLoc"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLoc"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="@+id/imageViewLoc"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewLoc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxWidth="420dp"
        android:maxHeight="400dp"
        android:minWidth="420dp"
        android:minHeight="250dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_desc"
        app:layout_constraintVertical_bias="0.689"
        app:srcCompat="@drawable/techpic" />


    <Button
        android:id="@+id/btnReturn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />


</android.support.constraint.ConstraintLayout>